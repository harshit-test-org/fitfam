{
  "version": 2,
  "name": "FitFam",
  "alias": "fitfam.me",
  "build": {
    "env": {
      "MYSQL_URL": "@fitfam-mysql-url"
    }
  },
  "builds": [
    {
      "src": "api/routes/*.ts",
      "use": "@now/node@canary"
    },
    {
      "src": "api/src/index.ts",
      "use": "@now/node@canary",
      "config": {
        "maxLambdaSize": "25mb"
      }
    },

    { "src": "www/package.json", "use": "@now/next" }
  ],
  "routes": [
    {
      "src": "/api/facebook-auth",
      "dest": "/api/routes/facebook-auth.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/src/index.ts"
    },
    { "src": "/(.*)", "dest": "/www/$1", "continue": true }
  ]
}
